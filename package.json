{
  "private": true,
  "version": "0.0.2",
  "packageManager": "^pnpm@7.18.0",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "lint": "shovel-cli lint",
    "publish": "node scripts/publish.mjs && shovel-cli publish",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{vue,js,ts,jsx,tsx,md}": "prettier --write",
